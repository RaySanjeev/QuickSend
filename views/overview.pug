extends base  
  
block content
  section.overview__main
    .overview__main--sidebar
      button.btn.btn__blue.sidebar__btn--1.active
        | contact list
      button.btn.btn__blue.sidebar__btn--2 messages sent
    .overview__content--messages
      .overview__main--content
        h2.mb-medium.overview__heading candidates
        .main__content
          each user in users
            .contact__container
              - let name;
              - const nameArray = user.name.split(' ');
              - if(nameArray.length >= 3) name = `${nameArray[0]} ${nameArray[2]}`;
              - else name = nameArray.join(' ');
              p.contact__container--name #{name}
              a.btn.detailsBtn(href=`/${user.slug}?num=${user.number}`) more details
    .overview__content--block.hidden
      .overview__main--content
        h2.mb-medium.overview__heading messages sent
        .message__content
          .message__container
            .message__container--block
              p.message__container--item.message__container--head
                | name
